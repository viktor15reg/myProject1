
// функция возвращающая минимальное значение

function getMin(arr){
  arr = [40, 25, 38, 97, 17, 65, 3];  
  return Math.min.apply(null, arr );     
}

// функция выводящая четные числа

 console.log(getMin());

 function getEvent(arr){
  arr = [5, 67, 4, 98, 73, 88, 50]
  for (let i = 0; i <arr.length; i++) {
    if ((arr[i] % 2) == 0) {
      alert(arr[i]);
    }
  }
}

 getEvent();